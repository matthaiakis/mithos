<% content_for :body_content_title do %>
  <%= @home_slide.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @home_slide.name %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%=raw @home_slide.image %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="home_slides">
      <% @home_slides.each do |home_slide| %>
        <li>
          <%= link_to home_slide.title, home_slide_path(home_slide) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
