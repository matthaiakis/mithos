<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(home_slide) -%>">
  <span class='title'>
    <%= home_slide.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), home_slide_path(home_slide),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_home_slide_path(home_slide),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_home_slide_path(home_slide),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => home_slide.title),
        :method => :delete %>
  </span>
</li>
