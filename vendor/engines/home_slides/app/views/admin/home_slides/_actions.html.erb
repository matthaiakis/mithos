<ul>
  <% if Admin::HomeSlidesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_home_slides_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_home_slide_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::HomeSlidesController.sortable? and HomeSlide.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Home Slides"),
                 admin_home_slides_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Home Slides"),
                 admin_home_slides_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>