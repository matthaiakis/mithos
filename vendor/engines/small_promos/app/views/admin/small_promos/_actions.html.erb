<ul>
  <% if Admin::SmallPromosController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_small_promos_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_small_promo_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::SmallPromosController.sortable? and SmallPromo.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Small Promos"),
                 admin_small_promos_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Small Promos"),
                 admin_small_promos_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>